{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": ["src//**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
